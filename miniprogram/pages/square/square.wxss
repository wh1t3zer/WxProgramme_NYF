.categories{ 
  display: flex; 
  width: 100%; 
  flex-direction: row; 
  line-height: 60rpx; 
 } 
.categories .item{ 
  flex: auto; 
  font-size: 30rpx; 
  text-align: center; 
  background: #fff; 
 } 
.categories .item.active{ 
  color: #1296DB;
  position: relative;
 } 
 .categories .item.active::after{ 
  content: ""; 
  display: block; 
  position: absolute;
  margin-left: auto;
  margin-right:auto;
  width: 50%;
  height: 4rpx; 
  bottom: 0; 
  left: 0; 
  right: 0; 
  background: #1296DB;
 }
 .swiper{
  display: flex; 
  width: 100%; 
  flex-direction: row; 
  line-height: 80rpx; 
  position: fixed;
  max-height: 100%;
  height: 100%;
}
.post-container{
  position:fixed;
  right:18rpx;
  bottom:20rpx;
  z-index:100;
  width: 120prx;
  height: 120prx;
}

.post-container .wall{
  position: absolute;
  z-index: 105;
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background: white;
  right: 10rpx;
  bottom: 30rpx;
}

.post image{
  width: 120rpx;
  height: 120rpx;
  position: relative;
  z-index: 110;
}
.container{
  width: 100%;
  display: block;
  flex-direction: column;
}
.container .container-wall{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  background: white;
  margin-top: 10rpx;
}

.container-wall .wall-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 15rpx;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #F0F8FF;
}

.wall-item .item-container{
  width: 95%;
  display: flex;
  flex-direction: row;
  margin-bottom: 5rpx;
}

.item-container .item-image{
  width: 13%;
}

.item-container .item-content{
  width: 80%;
  display: flex;
  flex-direction: column;
}

.item-image image{
  width:80rpx;
  height:80rpx;
  border-radius: 40rpx;
}

.item-content .user-name{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 35rpx;
  margin-bottom: 8rpx;
  margin-top: -5rpx;
}

.user-name .follow-icon{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.follow-icon .follow-world{
  font-size: 25rpx;
  color: darkgray;
}

.user-name .had-follow{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.single-image image{
  width: 400rpx;
}
.more-image{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.more-image image{
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.item-content .content{
  font-size: 35rpx;
  margin-bottom: 10rpx;
  margin-top: 2%;
}
.item-content .post-time{
  font-weight: 100;
  font-size: 25rpx;
  color: darkgray;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  margin-bottom: 25rpx;
}
.post-time .time-and-delete{
  display: flex;
  flex-direction: row;
}
.time-and-delete .delete-post{
  margin-left: 20rpx;
}
.parise{
  margin-right: 40rpx;
  height: 20rpx;
  width: 30rpx;
  text-align: center;
  position: relative;
}